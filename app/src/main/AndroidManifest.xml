    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="edu.ucsb.cs.cs185.jazariethach.sleepysale.SaleActivity"
            android:label=""
            android:parentActivityName="edu.ucsb.cs.cs185.jazariethach.sleepysale.MainActivity" >
        <!-- Parent activity meta-data to support API level 7+ -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="edu.ucsb.cs.cs185.jazariethach.sleepysale.MainActivity" />
        </activity>
    </application>

</manifest>
